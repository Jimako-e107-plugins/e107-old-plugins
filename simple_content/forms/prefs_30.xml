      <calendartime name="scontent_group_start_date" label="SCONTENT_LAN_ADMIN_GROUP_START_DATE" class="tbox">
         <default var="db"></default>
      </calendartime>

      <calendartime name="scontent_group_end_date" label="SCONTENT_LAN_ADMIN_GROUP_END_DATE" class="tbox">
         <default var="db"></default>
      </calendartime>

      <checkbox name="scontent_group_closed" label="SCONTENT_LAN_ADMIN_GROUP_CLOSED" class="tbox">
         <default var="db">0</default>
         <value>1</value>
      </checkbox>

      <accesstable name="scontent_group_view_class" label="SCONTENT_LAN_ADMIN_GROUP_VIEW_CLASS" class="tbox">
         <default var="db"/>
      </accesstable-->


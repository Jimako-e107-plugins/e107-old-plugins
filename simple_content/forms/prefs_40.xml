<?xml version="1.0" ?>
<e107HelperForm version="1.0">

   <form name="simple_content_item_admin_10_form" type="HELPER_FORM_TYPE_DB_ROW">

      <errorsattop value="true" />

      <dbdetails>
         <dbtable>scontent_relationships</dbtable>
         <index>scontent_rel_id</index>
         <data>scontent_rel_parent_item_id, scontent_rel_child_item_id</data>
         <order>scontent_rel_name asc</order>
         <liststyle>tbox</liststyle>
         <dbformatcallback class="SimpleContent">adminRelationshipsItemList</dbformatcallback>
      </dbdetails>

      <batch occurs="10" class="fcaption" prefname="scontent_relationship_repeats">
         <text name="scontent_rel_name" label="SCONTENT_LAN_ADMIN_REL_NAME" class="tbox">
            <default var="e107pref"></default>
            <mandatory>true</mandatory>
            <style name="width">95%</style>
            <maxlength>100</maxlength>
         </text>

         <table name="scontent_rel_parent_item_id" label="SCONTENT_LAN_ADMIN_ITEM_PARENT" class="tbox">
            <default var="db"/>
            <mandatory>true</mandatory>
            <value key="table">scontent_items</value>
            <value key="columns">*</value>
            <value key="order">scontent_item_name ASC</value>
         </table>

         <table name="scontent_rel_child_item_id" label="SCONTENT_LAN_ADMIN_ITEM_CHILD" class="tbox">
            <default var="db"/>
            <mandatory>true</mandatory>
            <value key="table">scontent_items</value>
            <value key="columns">*</value>
            <value key="order">scontent_item_name ASC</value>
         </table>

         <textarea name="scontent_rel_description" label="SCONTENT_LAN_ADMIN_REL_DESCRIPTION" class="tbox">
            <default var="e107pref"></default>
            <attribute name="rows">3</attribute>
            <attribute name="cols">50</attribute>
            <style name="width">95%</style>
            <bbcodes>true</bbcodes>
         </textarea>

      </batch>

   </form>

</e107HelperForm>
      </accesstable>

      <accesstable name="eplayer_download_class" label="EPLAYER_LAN_ADMIN_PREF_14_0" prompt="EPLAYER_LAN_ADMIN_PREF_14_1" help="EPLAYER_LAN_ADMIN_PREF_14_2" class="tbox">

      </accesstable>

      <accesstable name="eplayer_upload_class" label="EPLAYER_LAN_ADMIN_PREF_13_0" prompt="EPLAYER_LAN_ADMIN_PREF_13_1" help="EPLAYER_LAN_ADMIN_PREF_13_2" class="tbox">

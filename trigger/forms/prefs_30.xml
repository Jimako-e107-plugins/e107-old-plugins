         <value>1</value>
      </checkbox>

      <textarea name="trigger_naa_autoapproved_message" label="TRIGGER_LAN_PREFS_30_8" prompt="TRIGGER_LAN_PREFS_30_8p" help="TRIGGER_LAN_PREFS_30_8h" class="tbox">

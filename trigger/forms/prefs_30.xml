      <accesstable name="trigger_naa_view_class" label="TRIGGER_LAN_PREFS_30_2" prompt="TRIGGER_LAN_PREFS_20_2p" help="TRIGGER_LAN_PREFS_20_2h" class="tbox">
         <default var="e107pref">255</default>
